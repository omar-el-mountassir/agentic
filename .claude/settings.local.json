{
  "permissions": {
    "allow": ["mcp__filesystem-mcp__create_directory"],
    "deny": []
  },
  "hooks": {
    "PostToolUse": {
      "command": "npm run format",
      "description": "Auto-format code after file modifications",
      "enabled": true,
      "conditions": {
        "toolMatches": [".*write_file.*", ".*edit_file.*"]
      }
    },
    "PreToolUse": {
      "command": "echo 'Starting tool: $CLAUDE_TOOL_NAME'",
      "description": "Log tool usage for debugging",
      "enabled": false
    },
    "Notification": {
      "command": "echo 'Claude Code session active'",
      "description": "Session start notification",
      "enabled": false
    }
  }
}
