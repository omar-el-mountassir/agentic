{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Machine-Actionable Deep Dive Digest",
  "type": "object",
  "required": [
    "meta",
    "procedures",
    "decision_matrices",
    "safety_policies",
    "artifacts",
    "glossary"
  ],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["title", "version", "audience", "policy"],
      "properties": {
        "title": { "type": "string" },
        "version": { "type": "string" },
        "audience": { "type": "string" },
        "policy": { "type": "string" }
      }
    },
    "procedures": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "goal"],
        "properties": {
          "id": { "type": "string" },
          "goal": { "type": "string" }
        }
      }
    },
    "decision_matrices": { "type": "array" },
    "safety_policies": { "type": "array", "items": { "type": "string" } },
    "artifacts": { "type": "array" },
    "glossary": { "type": "array" }
  }
}
